        </div>*@
            <img src="~/images/@Model.Employee.ProfilePicture" height="150" />

            <input type="hidden" asp-for="Employee.ProfilePicture" />

            <div class="form-group">
                <label class="control-label">Image</label>
                <input type="file" class="form-control" name="file" />
            </div>

            <div class="form-group">
                <label asp-for="Employee.BranchId" class="control-label"></label>
                <select asp-for="Employee.BranchId" class="form-control" asp-items="ViewBag.BranchId">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="Employee.BranchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Clients</label>
                <select asp-for="SelectedClients" class="form-control js-example-basic-multiple"
