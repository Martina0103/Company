            <label asp-for="Employee.ProfilePicture" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Employee.ProfilePicture" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="Employee.ProfilePicture" class="text-danger"></span>
        </div>*@
